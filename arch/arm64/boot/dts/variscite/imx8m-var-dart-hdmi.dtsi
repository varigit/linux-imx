/ {
	chosen {
		add_bootargs = "androidboot.primary_display=imx-drm androidboot.fbTileSupport=enable video=HDMI-A-1:1920x1080-32@60";
	};
};

&dcss {
	status = "okay";
	disp-dev = "hdmi_disp";
};

&hdmi {
	status = "okay";
};

&hdmi_cec {
	status = "okay";
};

